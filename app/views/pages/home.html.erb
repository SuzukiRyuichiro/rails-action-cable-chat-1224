<div class="container">
  <% if signed_in? %>
    <% current_user.top_tracks.each do |track| %>
      <div class="d-flex align-items-center gap-3">
        <%= image_tag track.dig("album", "images", 0, "url"), heigt: 200, width: 200 %>
        <span><%= track.dig("name") %></span><small><%= track.dig("album", "name") %></small>
      </div>
    <% end %>
  <% else %>
    <h1>log in buddy!</h1>
  <% end %>
</div>
